<script>
    const form = document.querySelector('#addItemForm');
    form?.addEventListener('submit', (event) => {
        event.preventDefault();
    });

    const button = document.querySelector('button#submitButton');

    async function post() {
        const itemname = (document.querySelector('#name') as HTMLInputElement).value;
        const itemurl = (document.querySelector('#link') as HTMLInputElement).value;
        const img = (document.querySelector('#image') as HTMLInputElement).value;
        const price = (document.querySelector('#price') as HTMLInputElement).value;

        await fetch('http://localhost:3000/createNewItem', {
            body: JSON.stringify({
                itemname, itemurl, img, price
            }),
            headers: {
                "content-type": "application/json"
            },
            method: "POST"
        });

        // location.reload();
    }


    button?.addEventListener('click', () => {
        post();
    });
</script>

<div id="popup">
    <div id="title">Adicionar novo item</div>
    <form id="addItemForm">


        <label for="name">Nome</label><br>
        <input type="text" id="name" name="name" required>
        <br>
        <label for="image">Imagem</label><br>
        <input type="url" id="image" name="image" required>
        <br>
        <label for="price">Pre√ßo</label><br>
        <input type="number" id="price" name="price" required>
        <br>
        <label for="link">Link</label><br>
        <input type="url" id="link" name="link" required>
        <br><br>
        <button id="submitButton" type="submit">Adicionar</button>
    </form>

    
