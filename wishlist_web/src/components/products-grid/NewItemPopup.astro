<script>
    const form = document.querySelector('#addItemForm');
    form?.addEventListener('submit', (event) => {
        event.preventDefault();
    });

    const button = document.querySelector('button#submitButton');

    async function post() {
        const itemname = (document.querySelector('#itemname') as HTMLInputElement).value;
        const itemurl = (document.querySelector('#link') as HTMLInputElement).value;
        const imgurl = (document.querySelector('#image') as HTMLInputElement).value;
        const itemprice = (document.querySelector('#price') as HTMLInputElement).value;
        const itemcolor = (document.querySelector('#itemcolor') as HTMLInputElement).value;
        const itembrand = (document.querySelector('#itembrand') as HTMLInputElement).value;
        const itemsize = (document.querySelector('#itemsize') as HTMLInputElement).value;
        const itemcurrency = (document.querySelector('#currency-select') as HTMLInputElement).value;

        await fetch('http://localhost:2000/createNewWishlistItem', {
            body: JSON.stringify({
                itemname, itemurl, imgurl, itemprice, itemcolor, itembrand, itemsize, itemcurrency
            }),
            headers: {
                "content-type": "application/json"
            },
            method: "POST"
        });

        location.reload();
    }


    button?.addEventListener('click', () => {
        post();
    });
</script>

